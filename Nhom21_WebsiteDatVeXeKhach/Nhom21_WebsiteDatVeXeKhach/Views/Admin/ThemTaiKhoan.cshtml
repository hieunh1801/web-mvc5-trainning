@{
    ViewBag.Title = "Thêm Tài Khoản";
    Layout = "~/Views/SharedAdmin/_Layout.cshtml";
}

@using Nhom21_WebsiteDatVeXeKhach.Models.ViewModels
@model TaiKhoanDangKyView


<script>
    var element = document.getElementById("collapse1");
    element.classList.add("in");
</script>

<h2 style="text-align:center">Thêm Tài Khoản</h2>

<div class="container admin-sua-thong-tin">
    <form action="" method="post">
        <div class="form-group">
            <label>Tài khoản:</label>
            <input class="form-control dang-nhap-text" type="text" name="TenTaiKhoan" placeholder="Nhập tài khoản" value="@Model.TenTaiKhoan" />
            <span class="canh-bao">@Html.ValidationMessageFor(m => m.TenTaiKhoan)</span>
        </div>
        <div class="form-group">
            <label>Mật khẩu:</label>
            <input class="form-control dang-nhap-text" type="password" name="MatKhau" placeholder="Nhập mật khẩu" value="@Model.MatKhau" />
            <span class="canh-bao">@Html.ValidationMessageFor(m => m.MatKhau)</span>
        </div>
        <div class="form-group">
            <label>Xác nhận mật khẩu:</label>
            <input class="form-control dang-nhap-text" type="password" name="XacNhanMatKhau" placeholder="Xác nhận mật hhẩu" value="@Model.XacNhanMatKhau" />
            <span class="canh-bao">@Html.ValidationMessageFor(m => m.XacNhanMatKhau)</span>
        </div>
        <div class="form-group">
            <label>Họ và tên:</label>
            <input class="form-control dang-nhap-text" type="text" name="HoTen" placeholder="Họ và tên" value="@Model.HoTen" />
            <span class="canh-bao">@Html.ValidationMessageFor(m => m.HoTen)</span>
        </div>
        <div class="form-group">
            <label>Số điện thoại:</label>
            <input class="form-control dang-nhap-text" type="tel" name="SoDienThoai" placeholder="Số điện thoại" value="@Model.SoDienThoai" />
            <span class="canh-bao">@Html.ValidationMessageFor(m => m.SoDienThoai)</span>
        </div>
        <div class="form-group">
            <label>Email:</label>
            <input class="form-control dang-nhap-text" type="email" name="Email" placeholder="Email" value="@Model.Email" />
            <span class="canh-bao">@Html.ValidationMessageFor(m => m.Email)</span>
        </div>
        
        <div class="form-group">
            <input class="btn btn-default" type="submit" value="Thêm Mới" />
        </div>
    </form>
</div>
