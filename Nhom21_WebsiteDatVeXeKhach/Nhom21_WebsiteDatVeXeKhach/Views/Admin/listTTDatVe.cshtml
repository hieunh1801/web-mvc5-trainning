@{
    ViewBag.Title = "Danh Sách Thông Tin Vé Đặt";
    Layout = "~/Views/SharedAdmin/_Layout.cshtml";
}

@using Nhom21_WebsiteDatVeXeKhach.Models.Entities
@model List<THONGTINDATVE>

<script>
    var element = document.getElementById("collapse6");
    element.classList.add("in");
</script>

<h2>Danh Sách Thông Tin Vé Đặt</h2>
<div class="bang-danh-sach">
    <table class="table table-hover table-striped">
        <col style="width: 5%">
        <col style="width: 20%">
        <col style="width: 5%">
        <col style="width: 15%">
        <col style="width: 10%">
        <col style="width: 10%">
        <col style="width: 10%">
        <col style="width: 10%">
        <col style="width: 10%">
        <thead>
            <tr>
                <th>STT</th>
                <th>Thời Gian Đặt Vé</th>
                <th>SL</th>
                <th>Lý Do Hủy</th>
                <th>Trạng Thái</th>
                <th>ID Chuyến Xe</th>
                <th>ID Tài Khoản</th>
                <th>ID PTTT</th>
                <th>Thao Tác</th>
            </tr>
        </thead>
        <tbody>
            @{
                foreach (THONGTINDATVE p in Model)
                {
                    <tr>
                        <td>@p.ID_ThongTinDatVe</td>
                        <td>@p.ThoiGianDatVe</td>
                        <td>@p.SoLuongVe</td>
                        <td>@p.LyDoHuyVe</td>
                        <td>@p.TrangThaiDatVe</td>
                        <td>@p.ID_ChuyenXe</td>
                        <td>@p.ID_TaiKhoan</td>
                        <td>@p.ID_PTTT</td>
                        <td>
                            <a href="/Admin/SuaVeDat/@p.ID_ChuyenXe">Sửa</a>&nbsp;|&nbsp;
                            <a href="#" data-toggle="modal" data-target="#myModal"
                               onclick="myFunction('/Admin/XoaVeDat/@p.ID_ChuyenXe')">
                                Xóa
                            </a>
                        </td>
                    </tr>
                }
            }
        </tbody>
    </table>
</div>
<div class="trang">
    <ul class="pagination">
        <li><a href="/Admin/listTTDatVe/1">«</a></li>
        @for (int i = 1; i <= ViewBag.SoTrang; i++)
        {
            <li id="li-@i"><a href="/Admin/listTTDatVe/@i">@i</a></li>
        }
        <li><a href="/Admin/listTTDatVe/@ViewBag.SoTrang">»</a></li>
    </ul>
</div>

<script>
    var trang = document.getElementById('li-@ViewBag.Trang');
    trang.classList.add('active');
</script>

@Html.Partial("~/Views/SharedAdmin/_HopThoaiXacNhan.cshtml")