@{
    ViewBag.Title = "Danh Sách Nhà Xe";
    Layout = "~/Views/SharedAdmin/_Layout.cshtml";
}

@using Nhom21_WebsiteDatVeXeKhach.Models.Entities
@model List<HANGXE>

<script>
    var element = document.getElementById("collapse2");
    element.classList.add("in");
</script>

<h2>Danh Sách Nhà Xe</h2>
<div class="bang-danh-sach">
    <table class="table table-hover table-striped">
        <colgroup>
            <col style="width: 5%">
            <col style="width: 20%">
            <col style="width: 20%">
            <col style="width: 45%">
            <col style="width: 10%">
        </colgroup>
        <thead>
            <tr>
                <th>STT</th>
                <th>Tên Hãng Xe</th>
                <th>Đường Dẫn Logo</th>
                <th>Thông Tin Hãng Xe</th>
                <th>Thao Tác</th>
            </tr>
        </thead>
        <tbody>
            @{
                foreach (HANGXE p in Model)
                {
                    <tr>
                        <td>@p.ID_HangXe</td>
                        <td>@p.TenHangXe</td>
                        <td>@p.LogoHangXe</td>
                        <td>@p.ThongTinHangXe</td>
                        <td>
                            <a href="/Admin/SuaHangXe/@p.ID_HangXe">Sửa</a>&nbsp;|&nbsp;
                            <a href="#" data-toggle="modal" data-target="#myModal"
                               onclick="myFunction('/Admin/XoaHangXe/@p.ID_HangXe')">
                                Xóa
                            </a>
                        </td>
                    </tr>
                }
            }
        </tbody>
    </table>
</div>
<div class="trang">
    <ul class="pagination" >
        <li><a href="/Admin/listHangXe/1">«</a></li>
        @for (int i = 1; i <= ViewBag.SoTrang; i++)
        {
            <li id="li-@i"><a href="/Admin/listHangXe/@i">@i</a></li>
        }
        <li><a href="/Admin/listHangXe/@ViewBag.SoTrang">»</a></li>
    </ul>
</div>

<script>
    var trang = document.getElementById('li-@ViewBag.Trang');
    trang.classList.add('active');
</script>

@Html.Partial("~/Views/SharedAdmin/_HopThoaiXacNhan.cshtml")